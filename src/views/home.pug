<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="/styles/styles.css")
        title catch-mind
    body
        .loginBox
            form#jsLogin
                input(placeholder="닉네임을 정해주세요",type="text")
        .gameContainer#jsGame
            .main
                #jsTimer 30
                #jsNotifs 두명이상이 입장하면 게임이 시작합니다
                canvas.canvas#jsCanvas
                .controls#controls
                    .brushSize 
                        form
                            input#jsSize(type="range" step="0.01" min="0.1" max="2" value="1") 
                    .buttons
                        button#jsMode Fill
                        button#jsClear clear
                    .colors
                        .color.jsColor(style="background-color:rgb(0, 0, 0)")
                        .color.jsColor(style="background-color:rgb(255,255,255)")
                        .color.jsColor(style="background-color:rgb(255,59,48)")
                        .color.jsColor(style="background-color:rgb(255,149,0)")
                        .color.jsColor(style="background-color:rgb(255,204,0)")
                        .color.jsColor(style="background-color:rgb(76,217,100)")
                        .color.jsColor(style="background-color:rgb(90,200,250)")
                        .color.jsColor(style="background-color:rgb(0,122,255)")
                        .color.jsColor(style="background-color:rgb(88,86,214)")
            .chat
                .player__board#jsPBoard
                ul.chat__messages#jsMsg
                form.chat__form#jsSendMsg
                    input(placeholder="채팅을 입력해주세요", type="text")
        script.
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")   